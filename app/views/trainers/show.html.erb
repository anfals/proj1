<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% @trainer.pokemons.each do |pokem| %>
	<% if pokem.ndex %>
    	<%= image_tag("pokemon/#{pokem.ndex}.png", alt: "pokemon") %>
    <% end %>
	<h2><b><%= pokem.name %></b></h2>
	<h2><b><%= pokem.level %></b></h2>
	<h2><b><%= pokem.health %></b></h2>
	<%= button_to "Damage!", damage_path(id: pokem), :class => "button medium", :method => :patch %>
	<% end %>
<% if current_trainer.id == @trainer.id %>
	<%= button_to "Create a Pokemon", new_path, :class => "button medium", :method => :get %>
<% end %>
